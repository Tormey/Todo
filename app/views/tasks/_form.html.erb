<%= form_with model: @task, local: true do |form| %>
 
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :task_name %><br>
    <%= form.text_field :task_name %>
  </p>
  
  <p>
    <%= form.label :deadline%><br>
    <%= form.date_field :deadline%> 
  </p>

  <p>
    <%= form.label :details %><br>
    <%= form.text_area :details %>
  </p>

  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select one!") %>

  <p>
    <%= form.submit %>
  </p>
 
<% end %>
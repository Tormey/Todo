<h1>Here are your tasks</h1>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Task</th>
      <th>Due Date</th>
      <th>Details</th>
      <th>Category</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>
 
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.deadline %></td>
        <td><%= task.details %></td>
        <td><%= link_to category_path(task.category_id), class: 'btn btn-primary btn-xs' do %>
              <%= Category.find(task.category_id).name %> <i class= 'glyphicon glyphicon-tags'></i>
            <% end %>
        </td>
        <td><%= link_to task_path(task), class: 'btn btn-info btn-xs' do %>
              <i class= 'glyphicon glyphicon-file'></i>
            <% end %>
        </td>
        <td><%= link_to edit_task_path(task), class: 'btn btn-warning btn-xs' do %>
              <i class= 'glyphicon glyphicon-pencil'></i>
            <% end %>
        </td>
        <td><%= link_to task_path(task), class: 'btn btn-danger btn-xs',
                method: :delete,
                data: { confirm: 'Are you sure?' }  do %>
              <i class= 'glyphicon glyphicon-trash'></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
<%= link_to 'View Categories', categories_path, class: 'btn btn-primary' %>

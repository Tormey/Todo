<p id="notice"><%= notice %></p>

<h1>All Tasks</h1>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th class="col-md-2">Task</th>
      <th class="col-md-2">Due Date</th>
      <th class="col-md-3">Details</th>
      <th class="col-md-2">Category</th>
      <th class="col-md-1">Show</th>
      <th class="col-md-1">Edit</th>
      <th class="col-md-1">Delete</th>
    </tr>
  </thead>
 
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.deadline %></td>
        <td><%= task.details %></td>
        <td><%= link_to category_path(task.category_id), class: 'btn btn-primary btn-xs' do %>
              <%= Category.find(task.category_id).name %> <i class= 'glyphicon glyphicon-tags'></i>
            <% end %>
        </td>
        <td><%= link_to 'View', task_path(task), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to edit_task_path(task), class: 'btn btn-warning btn-xs' do %>
              <i class= 'glyphicon glyphicon-pencil'></i>
            <% end %>
        </td>
        <td><%= link_to task_path(task), class: 'btn btn-danger btn-xs',
                method: :delete,
                data: { confirm: 'Are you sure?' }  do %>
              <i class= 'glyphicon glyphicon-trash'></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Task', new_task_path, class: 'btn btn-primary btn-sm' %> |
<%= link_to 'View All Categories', categories_path, class: 'btn btn-primary btn-sm' %>

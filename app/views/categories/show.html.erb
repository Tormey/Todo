<p id="notice"><%= notice %></p>

<h1>Your Category Details</h1>

<table class="table table-striped table-hover table-responsive table-bordered"> 
  <tbody>
    <tr>
      <td class= "col-md-2"><strong>Category Name</strong></td>
      <td class= "col-md-10"><%= @category.name %></td>
    </tr>

    <tr>
      <td class= "col-md-2"><strong>Description</strong></td>
      <td class= "col-md-10"><%= @category.description %></td>
    </tr>
  </tbody>
</table>


<h2> Tasks under this category </h2>

<table class="table table-striped table-hover table-responsive">
  <tbody>
    <% Task.where(category_id: @category.id).each do |task| %>
      <tr>
        <td class= "col-md-5"><%= task.task_name %></td>
        <td class= "col-md-5"><%= task.deadline %></td>
        <td class= "col-md-2"><%= link_to 'View Task', task_path(task), class: 'btn btn-info btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit This Category', edit_category_path(@category), class: 'btn btn-warning btn-sm' %> |
<%= link_to 'Back to All Categories', categories_path, class: 'btn btn-primary btn-sm' %>

<p id="notice"><%= notice %></p>

<h1>Your Task Details</h1>

<table class="table table-striped table-hover table-responsive table-bordered"> 
  <tbody>
    <tr>
      <td class= "col-md-2"><strong>Task Name</strong></td>
      <td class= "col-md-10"><%= @task.task_name %></td>
    </tr>

    <tr>
      <td class= "col-md-2"><strong>Deadline</strong></td>
      <td class= "col-md-10"><%= @task.deadline %></td>
    </tr>

    <tr>
      <td class= "col-md-2"><strong>Category</strong></td>
      <td class= "col-md-10">
        <%= link_to category_path(@task.category_id), class: 'btn btn-primary btn-xs' do %>
              <%= Category.find(@task.category_id).name %> <i class= 'glyphicon glyphicon-tags'></i>
        <% end %>
      </td>
    </tr>

    <tr>
      <td class= "col-md-2"><strong>Details</strong></td>
      <td class= "col-md-10"><%= @task.details %></td>
    </tr>
  </tbody>
</table>


<%= link_to 'Edit This Task', edit_task_path(@task), class: 'btn btn-warning btn-sm' %> |
<%= link_to 'Back to All Tasks', tasks_path, class: 'btn btn-primary btn-sm' %>

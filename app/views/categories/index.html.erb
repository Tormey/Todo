<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning btn-xs'%></td>
        <td><%= link_to 'Destroy', category, class: 'btn btn-danger btn-xs',
                method: :delete, 
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
<%= link_to 'View All Tasks', tasks_path, class: 'btn btn-primary' %>

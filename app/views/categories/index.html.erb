<p id="notice"><%= notice %></p>

<h1>All Categories</h1>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th class="col-md-3">Name</th>
      <th class="col-md-6">Description</th>
      <th class="col-md-1">Show</th>
      <th class="col-md-1">Edit</th>
      <th class="col-md-1">Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'View', category, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to edit_category_path(category), class: 'btn btn-warning btn-xs' do %>
              <i class= 'glyphicon glyphicon-pencil'></i>
            <% end %>
        </td>
        <td><%= link_to category, class: 'btn btn-danger btn-xs',
                method: :delete, 
                data: { confirm: 'Are you sure?' } do %>
              <i class= 'glyphicon glyphicon-trash'></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-primary btn-sm' %> |
<%= link_to 'View All Tasks', tasks_path, class: 'btn btn-primary btn-sm' %>
